<udl-activity>
	<title>
		UDL Friction
	</title>
	<sections>
		<section>
			<title>
				Introduction
			</title>
			<type>
				<!-- 
					Current options include pretest, postest, introduction, wrapup,
					exploration-computer, exploration-math and exploration-reading/writing.
					This is (1) to allow the menu to sue colors and icons to indicate the 
					section type and (2) for future settings on when students may and may
					not reach certain sections. -->
				introduction
			</type>
			<pages>
				<page>
					<title>
						Driving Question
					</title>
					<content>
						What if there were no friction?
						<image name="some-image"/>
					</content>
					<coaching-statements>
						<coaching-statement>
							<coach-name>
								Macaw
							</coach-name>
							<statement>
								Some clever hint
							</statement>
						</coaching-statement>
						<coaching-statement>
							<coach-name>
								Owl
							</coach-name>
							<statement>
								Another clever hint
							</statement>
						</coaching-statement>
					</coaching-statements>
				</page>
				<page>
					<title>
						Exploring the question
					</title>
					<content>
						Let's explore this question.
						<model type="some model"/>
					</content>
					<coaching-statements>
						<coaching-statement>
							<coach-name>
								Macaw
							</coach-name>
							<statement>
								Some clever suggestion
							</statement>
						</coaching-statement>
						<coaching-statement>
							<coach-name>
								Owl
							</coach-name>
							<statement>
								Another clever suggestion
							</statement>
						</coaching-statement>
					</coaching-statements>
				</page>
			</pages>
		</section>
		<section>
			<title>
				Exploration 1
			</title>
			<type>
				exploration-computer
			</type>
			<pages>
				<page>
					<title>
						Page 1
					</title>
					<content>
						Play with the model
						<model type="some model type"/>
					</content>
					<coaching-statements>
						<coaching-statement>
							<coach-name>
								Macaw
							</coach-name>
							<statement>
								Some clever suggestion
							</statement>
						</coaching-statement>
					</coaching-statements>
				</page>
				<page>
					<title>
						Page 2
					</title>
					<content>
						Play with this new model
						<model type="some model type"/>
						Take data
						<graph type="temperature"/>
					</content>
					<coaching-statements>
						<coaching-statement>
							<coach-name>
								Owl
							</coach-name>
							<statement>
								Some clever suggestion
							</statement>
						</coaching-statement>
					</coaching-statements>
				</page>
			</pages>
		</section>
	</sections>
	<definitions>
		<definition>
			<word>
				Friction
			</word>
			<word-definition>
				<b>Friction</b> is a force that slows the motion of objects that are touching.
			</word-definition>
		</definition>
		<definition>
			<word>
				Sliding
			</word>
			<word-definition>
				<b>Sliding</b> is moving smoothly over a surface.
			</word-definition>
		</definition>
	</definitions>
</udl-activity>
